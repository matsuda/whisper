<div><%= link_to 'new', new_article_path %>
<%- if @articles.present? -%>
<ul>
  <%- @articles.each do |article| -%>
  <li><%= link_to article.title, article_path(article.slug), :target => '_blank' %>
    |
    <%= link_to 'edit', edit_article_path(article) %></li>
  <%- end -%>
</ul>
<%= paginate @articles %>
<%- end -%>
